<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/height_4dp"
    app:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/containerViewMovie"

        android:background="@color/white"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="fitXY"
            android:id="@+id/imgMovie" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMovieName"
                tools:text="ABCD 2"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvMovieYear"
                tools:text="ABCD 2"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tvGenere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMovieName"
                android:layout_alignParentStart="true"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="Generes: schjdjcn, sdjcnsd, ascujs" />

            <TextView
                android:id="@+id/tvRuntime"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvGenere"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                tools:text="Runtime: 127 mins"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/tvActors"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRuntime"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:ellipsize="end"
                android:layout_alignParentStart="true"
                tools:text="Runtime: 127 mins"
                android:singleLine="true"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>