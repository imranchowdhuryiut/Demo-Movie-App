<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vd_abstract_envelope"
    tools:context=".views.MovieListFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/layoutCustomToolbar"
                layout="@layout/layout_toolbar"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_below="@+id/layoutCustomToolbar"
                android:layout_margin="@dimen/height_4dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:id="@+id/imgMovieBanner"
                        android:layout_height="380dp"/>

                    <RelativeLayout
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvMovieName"
                            tools:text="ABCD 2"
                            android:textColor="@color/black"
                            android:textStyle="bold|italic"
                            android:textSize="22sp"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvMovieYear"
                            tools:text="ABCD 2"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:layout_alignParentEnd="true"/>

                        <TextView
                            android:id="@+id/tvGenere"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvMovieName"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            tools:text="Generes: schjdjcn, sdjcnsd, ascujs" />

                        <TextView
                            android:id="@+id/tvRuntime"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvGenere"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_alignParentStart="true"
                            tools:text="Runtime: 127 mins"
                            android:singleLine="true"/>

                        <TextView
                            android:id="@+id/tvActors"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvRuntime"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_alignParentStart="true"
                            tools:text="Actors: 127 mins"
                            />

                        <TextView
                            android:id="@+id/tvDirectors"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvActors"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_alignParentStart="true"
                            tools:text="Actors: 127 mins"
                            />

                        <TextView
                            android:id="@+id/tvPlot"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvDirectors"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_alignParentStart="true"
                            tools:text="Actors: 127 mins"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>